<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zt.ztgeoservice.user.dao.UserDao">
    <sql id="selectFields">
    id,
    username,
    password
    </sql>
    <select id="login" resultType="com.zt.ztgeoservice.user.entity.User">
       SELECT
        <include refid="selectFields"/>
        FROM
       zts_user order by id asc
    </select>
</mapper>